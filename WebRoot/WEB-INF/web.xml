<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>manage</display-name>
	<filter>
		<filter-name>AppFilter</filter-name>
		<filter-class>com.manage.core.AppFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/cmd</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/shopping/mall/cmd</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/shopping/mall/login</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/main</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/shopping/mall/main</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>CMDServlet</servlet-name>
		<servlet-class>com.manage.servlet.CMDServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CMDServlet</servlet-name>
		<url-pattern>/cmd</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CMDServlet</servlet-name>
		<url-pattern>/shopping/mall/cmd</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.manage.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/shopping/mall/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>com.manage.servlet.MainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/shopping/mall/main</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MyUploadServlet</servlet-name>
		<servlet-class>com.manage.servlet.UploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyUploadServlet</servlet-name>
		<url-pattern>/fileUpload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MyUploadServlet</servlet-name>
		<url-pattern>/shopping/mall/fileUpload</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.manage.servlet.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/shopping/mall/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>QuitServlet</servlet-name>
		<servlet-class>com.manage.servlet.QuitServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>QuitServlet</servlet-name>
		<url-pattern>/quit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QuitServlet</servlet-name>
		<url-pattern>/shopping/mall/quit</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
